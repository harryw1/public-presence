After=network.target

[Service]
Type=simple
User=harryweiss
Group=harryweiss
WorkingDirectory=/home/harryweiss/publicpresence
Environment="WEBHOOK_SECRET=5d16dd02469301bad50cd2e89268c528f78a94a674f9c39fc02023f4d366d12b"
